%%----------------------------------------------------------------------------
%% Titeldia
\setbeamertemplate{title page}{%
  \vspace{-25mm}
  \begin{beamercolorbox}[wd=\paperwidth,ht=.8\textheight]{block body}
  \begin{center}
    {\includegraphics[width=4.5cm]{logo/FBO-NL-inv}}
  \end{center}
  \end{beamercolorbox}
  \vspace{5mm}
  {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}
  
  \vspace{5mm}
  
  {\usebeamerfont{subtitle}\usebeamercolor[fg]{title}\insertauthor}
}

%%----------------------------------------------------------------------------
%% Sectiekop. Gebruik dit als volgt:
%%   \part{Titel deel}
%%   \partframe{Ondertitel deel}
\newcommand{\partframe}[1]{%
  {
    \setbeamertemplate{background canvas}{%
      \color{HoGentBlue}\rule{\paperwidth}{\paperheight}
    }
    \begin{frame}[plain]
      \fcolorbox{white}{HoGentBlue}{%
        \begin{minipage}[c][.9\textheight][t]{\textwidth}
          \usebeamercolor[fg]{part page}\usebeamerfont{title}\insertpart
          
          \vspace{5mm}
          
          \usebeamerfont{subtitle}#1
        \end{minipage}
      }
    \end{frame}
  }
}

